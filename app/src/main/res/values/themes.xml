<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/grey</item>

        <item name="colorPrimary">@color/white</item>


    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_marginStart">@dimen/button_left_mar</item>
        <item name="android:layout_marginEnd">@dimen/button_right_mar</item>
        <item name="android:layout_marginTop">@dimen/button_top_mar</item>
        <item name="android:layout_marginBottom">@dimen/button_bottom_mar</item>

    </style>

    <style name="ButtonNumberStyle" parent="MyButtonStyle">
        <item name="android:textColor">@color/buttons_text_color</item>
        <item name="android:backgroundTint">@color/number_buttons_color</item>
        <item name="android:textSize">@dimen/buttons_number_text_size</item>
    </style>

    <style name="ButtonMemoryStyle" parent="MyButtonStyle">
        <item name="android:textColor">@color/buttons_text_color</item>
        <item name="android:backgroundTint">@color/mem_buttons_color</item>
        <item name="android:textSize">@dimen/buttons_memory_text_size</item>
    </style>

    <style name="ButtonActionStyle" parent="MyButtonStyle">
        <item name="android:textColor">@color/buttons_text_color</item>
        <item name="android:backgroundTint">@color/action_buttons_color</item>
        <item name="android:textSize">@dimen/buttons_action_text_size</item>
    </style>

    <style name="ButtonThemeStyle" parent="MyButtonStyle">
        <item name="android:textColor">@color/buttons_text_color</item>
        <item name="android:backgroundTint">@color/themes_buttons_color</item>
        <item name="android:textSize">@dimen/buttons_themes_text_size</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>



</resources>